@model IEnumerable<UdemyVidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

@if (!Model.Any())
{
    <p>Sorry we don't have any movies at the moment.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Movie</th>
                <th>Genre</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@Html.ActionLink(movie.MovieName, "Details", "Movies", new { id = movie.MovieId }, null)</td>
                    <td>@movie.Genre.GenreName</td>
                </tr>
            }
        </tbody>
    </table>
}
